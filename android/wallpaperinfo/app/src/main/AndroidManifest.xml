<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thirdwavesoft.wallpaperinfo">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   	<uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:name="com.thirdwavesoft.wallpaperinfo.WallpaperInfoApp"
        android:allowBackup="true"
        android:icon="@drawable/thirdwave"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thirdwavesoft.wallpaperinfo.WallpaperInfoUI"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thirdwavesoft.wallpaperinfo.TromsoUI"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/FullscreenStyle"
            android:launchMode="singleTop"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="ACTION_GET_INFO_INTERNAL" />
            </intent-filter>
        </activity>
		<receiver
            android:name="com.thirdwavesoft.wallpaperinfo.BootReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
		<receiver android:name=".WallpaperWidgetProvider"
            android:label="@string/app_widget_4_1"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION_WIDGET_OPEN_IMAGE"/>
                <action android:name="ACTION_WIDGET_APP_SETTING"/>
                <action android:name="ACTION_WIDGET_PAUSE_RESUME"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_provider_4_1" />
        </receiver>
        <service
			android:name="com.thirdwavesoft.wallpaperinfo.WallpaperService"
			android:enabled="true"
			android:exported="false"
            android:process=":bp_wallpaper_process" >
			<intent-filter>
				<action android:name="android.intent.action.CONFIGURATION_CHANGED"/>
				<action android:name="ACTION_SERVICE_REQUEST_INFO"/>
				<action android:name="ACTION_SERVICE_IMAGE_PAUSE_RESUME"/>
				<action android:name="ACTION_SERVICE_IMAGE_NEXT"/>
				<action android:name="ACTION_SERVICE_IMAGE_PREVIOUS"/>
            </intent-filter>
		</service>
    </application>
</manifest>
