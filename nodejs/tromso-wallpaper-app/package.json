{
    "name": "tromso-wallpaper-app",
    "version": "1.0.0",
    "description": "Wallpaper slideshow application with React and Node.js",
    "main": "dist/server.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "nodemon --exec ts-node src/server.ts",
        "dev:client": "vite",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build",
        "build:server": "tsc --project tsconfig.server.json",
        "start": "node dist/server.js",
        "lint": "eslint . --ext .ts,.tsx",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "wallpaper",
        "slideshow",
        "react",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/node": "^20.19.21",
        "@types/react": "^18.3.26",
        "@types/react-dom": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "eslint": "^8.57.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "nodemon": "^3.1.10",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.18",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vite": "^4.5.14"
    },
    "directories": {
        "test": "tests"
    },
    "type": "commonjs"
}
