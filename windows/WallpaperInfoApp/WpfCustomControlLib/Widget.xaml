<Window x:Class="WpfCustomControlLib.Widget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget" Height="35" Width="976" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid>
        <TextBlock Name="_widgetLabelShadow" Text="" Foreground="Blue" 
                   HorizontalAlignment="Left" Margin="1,1,0,0" VerticalAlignment="Top" 
                   Width="976" Height="30"  FontWeight="Bold" FontSize="18">
            <TextBlock.RenderTransform>
                <TranslateTransform X="2" Y="2" />
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Name="_widgetLabel" Text="" Foreground="White" 
                   HorizontalAlignment="Left" Margin="1,1,0,0" VerticalAlignment="Top" 
                   Width="976" Height="30"  FontWeight="Bold" FontSize="18">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="5" Direction="330" Color="Black" Opacity="0.8" BlurRadius="20" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
